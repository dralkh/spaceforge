{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2017",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7",
      "ES2017"
    ]
  },
  "include": [
    "main.ts",
    "api/**/*.ts",
    "controllers/**/*.ts",
    "models/**/*.ts",
    "services/**/*.ts",
    "ui/**/*.ts",
    "utils/**/*.ts",
    "types/**/*.d.ts"
  ]
}
